@model WarehouseSystem.Models.ViewModels.ProductEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.HiddenFor(p => p.Product.ProductId)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.QtyOnHand" class="control-label"></label>
                <input asp-for="Product.QtyOnHand" class="form-control" />
                <span asp-validation-for="Product.QtyOnHand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.MinimumQuantity" class="control-label"></label>
                <input asp-for="Product.MinimumQuantity" class="form-control" />
                <span asp-validation-for="Product.MinimumQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Supplier" class="control-label"></label>
                <select asp-for="Product.SupplierId" class="form-control" asp-items="@Model.SupplierOptions"></select>
                <span asp-validation-for="Product.SupplierId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

